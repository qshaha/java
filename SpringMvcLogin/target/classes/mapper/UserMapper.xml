<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bilibilimao.mapper.UserMapper">
	<sql id="Base_User_List">
		id, username, password, photo
	</sql>
	<select id="findUserByNameAndPassword" parameterType="com.bilibilimao.po.User" resultType="com.bilibilimao.po.User">
		select
		<include refid="Base_User_List" />
		from user where username = #{username} and password = #{password}
	</select>
</mapper>